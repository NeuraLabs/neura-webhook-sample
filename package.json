{
  "name": "neura-webhook-sample",
  "version": "0.1.0",
  "description": "Sample webhook server for Neura events",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon -e js,json index.js",
    "dev:debug": "nodemon --inspect --inspect-brk -e js,json index.js",
    "lint": "eslint *.js",
    "lint:staged": "lint-staged"
  },
  "keywords": [
    "neura",
    "webhook",
    "ios",
    "android",
    "push",
    "notification",
    "push"
  ],
  "author": "Matias Crivolotti <matias@theneura.com>",
  "repository": "https://github.com/NeuraLabs/neura-webhook-sample.git",
  "license": "MIT",
  "engines": {
    "node": "^7.6.0"
  },
  "lint-staged": {
    "*.js": "lint"
  },
  "pre-commit": "lint:staged",
  "dependencies": {
    "apn": "2.1.4",
    "koa": "2.2.0",
    "koa-bodyparser": "4.2.0",
    "koa-route": "3.2.0",
    "mongoose": "4.9.2"
  },
  "devDependencies": {
    "eslint": "3.18.0",
    "eslint-config-airbnb-base": "11.1.2",
    "eslint-plugin-import": "2.2.0",
    "lint-staged": "3.4.0",
    "nodemon": "1.11.0",
    "pre-commit": "1.2.2"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 8
    },
    "extends": "airbnb-base",
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "new-cap": 0,
      "no-param-reassign": 0,
      "prefer-arrow-callback": 0
    }
  }
}
